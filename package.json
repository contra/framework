{
  "name": "kratos",
  "version": "2.0.0",
  "description": "MVC framework for NodeJS",
  "homepage": "https://git.io/kratos",
  "main": "index.js",
  "files": [
    "dist/",
    "index.js",
    "helpers.js",
    "errors.js"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "babel src --out-dir dist --presets nodejs-lts",
    "develop": "npm run build -- --watch"
  },
  "repository": "kratos/framework",
  "keywords": [
    "web",
    "app",
    "http",
    "application",
    "framework",
    "middleware",
    "rack"
  ],
  "engines": {
    "node": ">= 4.0.0",
    "npm": ">= 3.0.0"
  },
  "author": {
    "name": "Josh Manders",
    "email": "josh@joshmanders.com",
    "url": "https://www.joshmanders.com"
  },
  "license": "MIT",
  "dependencies": {
    "bluebird": "3.1.1",
    "commander": "2.9.0",
    "delegates": "0.1.0",
    "inflect": "0.3.0",
    "koa": "1.1.2",
    "koa-router": "5.3.0",
    "lodash": "3.10.1",
    "merge-descriptors": "1.0.0",
    "methods": "1.1.1",
    "process-env": "1.1.0"
  },
  "devDependencies": {
    "babel-cli": "6.2.0",
    "babel-preset-nodejs-lts": "1.2.0",
    "rimraf": "*",
    "standard": "*"
  },
  "standard": {
    "ignore": [
      "dist/**"
    ],
    "globals": [
      "describe",
      "it"
    ]
  }
}
