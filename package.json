    "restful",
    "router",
    "app",
    "es6"
  ],
  "engines": {
    "node": ">= 4.0.0",
    "npm": ">= 3.0.0"
  },
  "author": {
    "name": "Josh Manders",
    "email": "josh@joshmanders.com",
    "url": "https://www.joshmanders.com"
  },
  "license": "MIT",
  "dependencies": {
    "bluebird": "3.0.6",
    "delegates": "0.1.0",
    "koa": "1.1.2",
    "koa-body": "1.3.0",
    "koa-compress": "1.0.8",
    "koa-cors": "0.0.16",
