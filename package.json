{
  "name": "kratos",
  "description": "Powerful full stack framework using the strength of the JavaScript ecosystem",
  "homepage": "https://git.io/kratos",
  "main": "dist/",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "mocha --compilers js:babel/register --reporter spec --bail --check-leaks test/",
    "test:coverage": "istanbul cover _mocha -- --compilers js:babel/register --reporter dot --check-leaks test/",
    "test:coverage:check": "istanbul check-coverage --statements 50 --branches 50 --functions 50 --lines 50",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "babel src --optional=runtime --whitelist=es6.modules,strict --out-dir dist",
    "develop": "npm run build -- --watch",
    "commit": "git-cz && git push",
    "release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kratos/kratos.git"
  },
  "keywords": [
    "framework",
    "full",
    "stack",
    "koa",
    "api",
    "http",
    "web",
    "rest",
    "restful",
    "router",
    "app",
    "es6"
  ],
  "engines": {
    "iojs": ">= 3.0.0",
    "node": ">= 4.0.0"
  },
  "author": {
    "name": "Viarcore",
    "email": "support@viracore.com",
    "url": "https://www.viracore.com"
  },
  "contributors": [
    {
      "name": "Josh Manders",
      "email": "josh@joshmanders.com",
      "url": "https://certifiedweb.ninja"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "koa": "1.0.0",
    "koa-compress": "1.0.8",
    "koa-logger": "1.3.0",
    "koa-mount": "1.3.0",
    "koa-response-time": "1.0.2",
    "koa-views": "3.1.0",
    "kratos-config": "1.2.1",
    "kratos-router": "1.3.2",
    "lodash": "3.10.1",
    "process-env": "0.0.1"
  },
  "devDependencies": {
    "babel": "5.8.23",
    "babel-runtime": "5.8.24",
    "chai": "3.2.0",
    "commitizen": "2.1.0",
    "cz-conventional-changelog": "1.1.4",
    "ghooks": "0.3.2",
    "istanbul": "0.3.20",
    "mocha": "2.3.2",
    "rimraf": "2.4.3",
    "semantic-release": "4.3.5",
    "standard": "5.2.2",
    "supertest": "1.1.0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test && npm run test:coverage:check"
    }
  },
  "standard": {
    "ignore": [
      "dist/**"
    ],
    "globals": [
      "describe",
      "it"
    ]
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "release": {
    "branch": "develop"
  }
}
